<h1 id="welcomeHI">Update item</h1>

<form action="/updateItem/{{food._id}}" method="POST">

<span>Name of Item</span>
<input type="text"class="input" name="productName" value="{{food.name}}"placeholder="Product Name">

<span>Current Date: {{food.dateOfPurchase}}</span>
<input type="date" class="input" name="dateOfPurchase" value="{{food.dateOfPurchase}}"placeholder="Date of purchase">

<span>Current Expiration date: {{food.expiryDate}}</span>
<input type="date" class="input" name="expiryDate" value="{{food.expiryDate}}" placeholder="Expiration date">


<button id="buttonBlack" type="submit" class="submitButton">Update Item</button>
<p>{{errorMessage}}</p>
</form>



